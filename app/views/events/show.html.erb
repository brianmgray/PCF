<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Venue:</b>
  <% temp = @event.venue_id %>
  <%= Venue.find(temp).name %>
</p>

<p>
  <b>Start time:</b>
  <%= @event.start_time.strftime('%l:%M %p') %>
</p>

<p>
  <b>End time:</b>
  <%= @event.end_time.strftime('%l:%M %p') %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Date:</b>
  <%= @event.date %>
</p>

<p>
  <b>Acts:</b>
  <% @event.actslist.each do |act| %>
    <%= act %>
    <% end %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
