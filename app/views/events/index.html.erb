<h1 class="schedule-header">Listing events</h1>
<div class="schedule-nav-contain">
	<ul class="schedule-nav">
		<li class="schedule-nav-link">All Events</li>
		<li class="schedule-nav-link">Past Events</li>
		<% @event_date.sort.each do |date, events| %>
			<li class="schedule-nav-link"><%= date.strftime('%A %m/%d') %></li>
		<% end %>
	</ul>
	<div class="venue-drop">
		Venue<span class="caret"></span>
	</div>
</div>

<% @event_date.sort.each do |date, events| %>
  <h2 class="date-header"><%= date.strftime('%A %m/%d') %></h2>
  <% for event in events %>
  		<div class="panel-group" id="accordion">
 				<div class="panel panel-default">
 				<a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#eventid<%=event.id%>">
		    	<div class="event-contain">
			    	<div class="event-contain-left">
			    		<h5><%= event.name.upcase %></h5>
			    		
			    	</div>
			    	<div class="event-contain-right">
			    		<p class="venue_name"><%= Venue.find(event.venue_id).name %></p>
			    		<p class="event_time"><%= event.start_time.strftime('%l:%M %p')%> - <%= event.end_time.strftime('%l:%M %p') %></p>
			    	</div>
		    	</div>
		    	</a>
		    	<div id="eventid<%=event.id%>" class="panel-collapse collapse">
      			<div class="panel-body">
      				<% event.acts.each do |act| %> 
				      	<li><%= act.name %><li>
				      <% end %>
				     </div>
				  </div>
				</div>
			</div>
		  <br>
  <% end %>
<% end %>

<br />

<%= link_to 'New Event', new_event_path %>
