<div id="nav-bar"><img src="assets/pcf_logo.png" id="pcf-logo"></div>
<div id="navbar" class="fixed container">
	
	
	<div class='nav-day'>
		<ul id="navm" class="nav nav-pills">
		<% @event_date.sort.each do |date, events| %>
			<li >
			 <a href= <%= "#" + date.strftime('%A%m%d') %> ><%= date.strftime('%A %m/%d') %></a>
			</li>
		<% end %>
		</ul>
	</div>
	
	<div class="btn-group">
	    <a id="venuefilter" class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">All Venues<span class="caret"></span></a>
	    <ul id="venuem" class="dropdown-menu">
        <li>
					<a href="#">All Venues</a>
			 	</li>
        <li class="divider">
			 	</li>
	      <% Venue.all.each do |venue| %>
	      <li>
					<a href="#"><%= venue.name %></a>
				</li>
	      <% end %>
	    </ul>			
	</div>
	
	<% if current_user %>
	<div class="nav-starred">
	    <a id="starredfilter" class="btn" href="#">Starred Events</a>

	</div>
  <% end %>

	
  <div class="loginnout">
  
	  <% if user_signed_in? %>
	     <%= current_user.email %>. Not you?
	    <%= link_to "Sign Out", destroy_user_session_path, :class=>"btn btn-default" %>
	  <% else %>
	  
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        Sign in <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <li> <%= f.label :email %> 
        <%= f.email_field :email, :autofocus => true %> </li>

        <li><%= f.label :password %><br />
        <%= f.password_field :password %></li>

        <% if devise_mapping.rememberable? -%>
          <li><%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end -%>
        

        <%= f.submit "Sign in" %></li>
      <% end %>
      <li> <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, "facebook")%> </li>



      </ul>
    </div>
	  <% end %>
  </div>
</div>