<h1>Listing acts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Event</th>
    <th>Description</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @acts.each do |act| %>
  <tr>
    <td><%= act.name %></td>
    <td><%= act.event_id %></td>
    <td><%= act.description %></td>
    <td><%= act.duration %></td>
    <td><%= link_to 'Show', act %></td>
    <td><%= link_to 'Edit', edit_act_path(act) %></td>
    <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<% if can? :create, Act %>
<%= link_to 'New Act', new_act_path %>
